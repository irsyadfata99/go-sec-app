{{template "base" .}}

{{define "title"}}Home{{ end }}

{{define "content"}}
<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<!-- Section : Home -->
<section
  id="home"
  class="section hero-section"
  style="
    position: relative;
    color: white;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  "
>
  <div
    style="
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('https://images.unsplash.com/photo-1741920852866-94d44a2d32bb?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA==');
      background-size: cover;
      background-position: center;
      opacity: 0.8;
      z-index: -1;
    "
  ></div>
  <div
    style="
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: -1;
    "
  ></div>
  <div class="container">
    <div class="content text-center text-white">
      <h1
        class="display-4 fw-bold mb-4"
        style="animation: fadeInUp 1s ease-out"
      >
        Title of the website
      </h1>
      <h3
        class="mb-4"
        style="animation: fadeInUp 1s ease-out 0.3s; animation-fill-mode: both"
      >
        Enjoy my website
      </h3>
      <a
        href="#about"
        class="btn btn-info btn-lg px-4 py-2"
        style="animation: fadeInUp 1s ease-out 0.6s; animation-fill-mode: both"
        >Get Started</a
      >
    </div>
  </div>
</section>

<!-- Section : About -->
<section id="about" class="section py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6 mb-4 mb-md-0">
        <img
          src="https://images.unsplash.com/photo-1542314831-068cd1dbfeeb?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Hotel"
          class="img-fluid rounded shadow"
        />
      </div>
      <div class="col-md-6 text-left about-text">
        <h3>Bed and Breakfast</h3>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Iusto sequi,
          ipsa maxime possimus ipsam dolorum culpa est quidem, cupiditate
          voluptatibus perspiciatis aut dignissimos hic reprehenderit eos,
          corrupti error necessitatibus impedit.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Section : Product -->
<section id="product" class="section py-5">
  <div class="container">
    <!-- Product Section Title -->
    <div class="row mb-5">
      <div class="col-12 text-center">
        <h2 class="display-4 fw-bold">Our Products</h2>
        <div
          class="divider mx-auto my-4"
          style="width: 80px; height: 3px; background-color: #0dcaf0"
        ></div>
      </div>
    </div>

    <!-- Product Grid -->
    <div class="row align-items-center mb-5">
      <!-- Image Column -->
      <div class="col-md-6 mb-4 mb-md-0">
        <img
          src="https://images.unsplash.com/photo-1496417263034-38ec4f0b665a?q=80&w=3871&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Product Image"
          class="img-fluid rounded shadow"
        />
      </div>

      <!-- Text Column -->
      <div class="col-md-6">
        <h3>General's Quarters</h3>
        <p class="lead">
          Experience excellence with our carefully designed products that
          combine functionality with aesthetic appeal.
        </p>
        <p>
          Our products are crafted with attention to detail, ensuring durability
          and performance that exceeds industry standards. We focus on
          sustainable materials and innovative approaches to create solutions
          that make a difference.
        </p>
        <ul class="list-unstyled">
          <li>
            <i class="bi bi-check-circle-fill text-info me-2"></i>High-quality
            materials
          </li>
          <li>
            <i class="bi bi-check-circle-fill text-info me-2"></i>Sustainable
            production
          </li>
          <li>
            <i class="bi bi-check-circle-fill text-info me-2"></i>Expert
            craftsmanship
          </li>
        </ul>
        <a href="generals.html" class="btn btn-info mt-3">Book Now</a>
      </div>
    </div>

    <div class="row align-items-center mb-5">
      <!-- Text Column (Order switched for visual variety) -->
      <div class="col-md-6 order-md-2">
        <img
          src="https://images.unsplash.com/photo-1618773928121-c32242e63f39?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Product Image"
          class="img-fluid rounded shadow"
        />
      </div>

      <!-- Image Column -->
      <div class="col-md-6 order-md-1">
        <h3>Major's Suite</h3>
        <p class="lead">
          Experience excellence with our carefully designed products that
          combine functionality with aesthetic appeal.
        </p>
        <p>
          Our products are crafted with attention to detail, ensuring durability
          and performance that exceeds industry standards. We focus on
          sustainable materials and innovative approaches to create solutions
          that make a difference.
        </p>
        <ul class="list-unstyled">
          <li>
            <i class="bi bi-check-circle-fill text-info me-2"></i>High-quality
            materials
          </li>
          <li>
            <i class="bi bi-check-circle-fill text-info me-2"></i>Sustainable
            production
          </li>
          <li>
            <i class="bi bi-check-circle-fill text-info me-2"></i>Expert
            craftsmanship
          </li>
        </ul>
        <a href="majors.html" class="btn btn-info mt-3">Book Now</a>
      </div>
    </div>

    <!-- Reservation Button -->
    <div class="row">
      <div class="col-12 text-center">
        <a
          href="reservation.html"
          class="btn btn-info btn-lg px-5 py-3 fw-bold"
        >
          Make a Reservation
          <i class="bi bi-arrow-right ms-2"></i>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Section : Contact -->
<section id="contact" class="section py-5">
  <div class="container">
    <!-- Contact Section Title -->
    <div class="row mb-5">
      <div class="col-12 text-center">
        <h2 class="display-4 fw-bold">Contact Us</h2>
        <div
          class="divider mx-auto my-4"
          style="width: 80px; height: 3px; background-color: #0dcaf0"
        ></div>
        <p class="lead">
          We'd love to hear from you. Reach out and let's start a conversation!
        </p>
      </div>
    </div>

    <!-- Contact Grid -->
    <div class="row align-items-center mb-5">
      <!-- Form Column -->
      <div class="col-lg-6 mb-4 mb-lg-0">
        <div class="card border-0 shadow-sm rounded-3">
          <div class="card-body p-4 p-md-5">
            <form>
              <div class="mb-3">
                <label for="name" class="form-label">Your Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  placeholder="Enter your name"
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  placeholder="Enter your email"
                />
              </div>
              <div class="mb-3">
                <label for="subject" class="form-label">Subject</label>
                <input
                  type="text"
                  class="form-control"
                  id="subject"
                  placeholder="Enter subject"
                />
              </div>
              <div class="mb-4">
                <label for="message" class="form-label">Message</label>
                <textarea
                  class="form-control"
                  id="message"
                  rows="4"
                  placeholder="Enter your message"
                ></textarea>
              </div>
              <button type="submit" class="btn btn-info w-100 py-3">
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Info Column -->
      <div class="col-lg-6">
        <div class="ps-lg-4">
          <div class="contact-info mb-4">
            <h3>Get in Touch</h3>
            <p>
              Have questions about our products or services? Contact us directly
              using the information below.
            </p>
          </div>

          <div class="d-flex align-items-start mb-3">
            <div class="contact-icon me-3">
              <i class="bi bi-geo-alt-fill fs-4 text-info"></i>
            </div>
            <div>
              <h5 class="mb-1">Our Location</h5>
              <p class="mb-0">
                123 Business Avenue, Suite 500<br />New York, NY 10001
              </p>
            </div>
          </div>

          <div class="d-flex align-items-start mb-3">
            <div class="contact-icon me-3">
              <i class="bi bi-envelope-fill fs-4 text-info"></i>
            </div>
            <div>
              <h5 class="mb-1">Email Us</h5>
              <p class="mb-0">
                info@yourcompany.com<br />support@yourcompany.com
              </p>
            </div>
          </div>

          <div class="d-flex align-items-start mb-3">
            <div class="contact-icon me-3">
              <i class="bi bi-telephone-fill fs-4 text-info"></i>
            </div>
            <div>
              <h5 class="mb-1">Call Us</h5>
              <p class="mb-0">+1 (555) 123-4567<br />+1 (555) 987-6543</p>
            </div>
          </div>

          <div class="mt-4">
            <h5>Follow Us</h5>
            <div class="social-icons">
              <a href="#" class="text-decoration-none me-3"
                ><i class="bi bi-facebook fs-4"></i
              ></a>
              <a href="#" class="text-decoration-none me-3"
                ><i class="bi bi-twitter fs-4"></i
              ></a>
              <a href="#" class="text-decoration-none me-3"
                ><i class="bi bi-instagram fs-4"></i
              ></a>
              <a href="#" class="text-decoration-none"
                ><i class="bi bi-linkedin fs-4"></i
              ></a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Map Section -->
    <div class="row mt-5">
      <div class="col-12">
        <div
          class="map-container rounded shadow-sm"
          style="
            height: 400px;
            background-color: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
          "
        >
          <div class="text-center">
            <i class="bi bi-map fs-1 text-info mb-3"></i>
            <h4>Map Placeholder</h4>
            <p class="text-muted">
              Integrate Google Maps or your preferred map service here
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{{ end }}
